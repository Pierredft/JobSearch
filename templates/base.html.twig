<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Job Search ERP{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ğŸ’¼</text></svg>">
        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    </head>
    <body>
        <div class="app-container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <h1 class="sidebar-title">ğŸ’¼ Job Search ERP</h1>
                </div>
                
                <nav class="sidebar-nav">
                    <a href="{{ path('app_home') }}" class="nav-item {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">
                        <span class="nav-icon">ğŸ“Š</span>
                        <span>Dashboard</span>
                    </a>
                    <a href="{{ path('app_application_index') }}" class="nav-item {% if app.request.attributes.get('_route') starts with 'app_application' %}active{% endif %}">
                        <span class="nav-icon">ğŸ“</span>
                        <span>Candidatures</span>
                    </a>
                    <a href="{{ path('app_company_index') }}" class="nav-item {% if app.request.attributes.get('_route') starts with 'app_company' %}active{% endif %}">
                        <span class="nav-icon">ğŸ¢</span>
                        <span>Entreprises</span>
                    </a>
                    <a href="{{ path('app_platform_index') }}" class="nav-item {% if app.request.attributes.get('_route') starts with 'app_platform' %}active{% endif %}">
                        <span class="nav-icon">ğŸŒ</span>
                        <span>Plateformes</span>
                    </a>
                </nav>
            </aside>

            <!-- Main content -->
            <main class="main-content">
                <div class="content-wrapper">
                    <!-- Flash messages -->
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
    </body>
</html>
