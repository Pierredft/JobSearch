{% extends 'base.html.twig' %}

{% block title %}Candidatures - Job Search ERP{% endblock %}

{% block body %}
<div class="fade-in">
    <div class="flex-between mb-xl">
        <h1 class="page-title mb-0">üìù Mes Candidatures</h1>
        <a href="{{ path('app_application_new') }}" class="btn btn-primary">
            ‚ûï Nouvelle candidature
        </a>
    </div>

    <div class="card mb-xl">
        <form method="get" class="filter-form">
            <div class="flex-grow">
                <label class="form-label" for="sector">Secteur</label>
                <select name="sector" id="sector" class="form-select">
                    <option value="">Tous les secteurs</option>
                    {% for sector in sectors %}
                        <option value="{{ sector.id }}" {{ currentSector == sector.id ? 'selected' : '' }}>
                            {{ sector.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex-grow">
                <label class="form-label" for="status">Statut</label>
                <select name="status" id="status" class="form-select">
                    <option value="">Tous les statuts</option>
                    {% for status in statuses %}
                        <option value="{{ status.value }}" {{ currentStatus == status.value ? 'selected' : '' }}>
                            {{ status.label }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">
                    üîç Filtrer
                </button>
                {% if currentSector or currentStatus %}
                    <a href="{{ path('app_application_index') }}" class="btn btn-secondary ml-sm">
                        ‚ùå Reset
                    </a>
                {% endif %}
            </div>
        </form>
    </div>

    {% if applications|length > 0 %}
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Poste</th>
                    <th>Secteur</th>
                    <th>Entreprise</th>
                    <th>Plateforme</th>
                    <th>Localisation</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for application in applications %}
                <tr>
                    <td data-label="Date">{{ application.applicationDate|date('d/m/Y') }}</td>
                    <td data-label="Poste">
                        <strong>{{ application.jobTitle }}</strong>
                        {% if application.salary %}
                            <br><small class="text-secondary">{{ application.salary }}</small>
                        {% endif %}
                    </td>
                    <td data-label="Secteur">
                        {% if application.sector %}
                            <span class="badge" style="background: var(--surface-hover); color: var(--text-primary);">
                                {{ application.sector.name }}
                            </span>
                        {% else %}
                            <span class="text-secondary">-</span>
                        {% endif %}
                    </td>
                    <td data-label="Entreprise">{{ application.company.name }}</td>
                    <td data-label="Plateforme">{{ application.platform.name }}</td>
                    <td data-label="Localisation">{{ application.location ?? '-' }}</td>
                    <td data-label="Statut">
                        <span class="badge badge-{{ application.status.badge }}">
                            {{ application.status.label }}
                        </span>
                    </td>
                    <td data-label="Actions">
                        <div class="flex gap-sm">
                            <a href="{{ path('app_application_show', {'id': application.id}) }}" class="btn btn-sm btn-secondary">
                                üëÅÔ∏è
                            </a>
                            <a href="{{ path('app_application_edit', {'id': application.id}) }}" class="btn btn-sm btn-primary">
                                ‚úèÔ∏è
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card text-center">
        <h3>Aucune candidature pour le moment</h3>
        <p class="text-secondary mb-lg">Commencez par ajouter votre premi√®re candidature !</p>
        <a href="{{ path('app_application_new') }}" class="btn btn-primary">
            ‚ûï Ajouter une candidature
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
