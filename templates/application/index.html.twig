{% extends 'base.html.twig' %}

{% block title %}Candidatures - Job Search ERP{% endblock %}

{% block body %}
<div class="fade-in">
    <div class="flex-between mb-xl">
        <h1 class="page-title mb-0">üìù Mes Candidatures</h1>
        <a href="{{ path('app_application_new') }}" class="btn btn-primary">
            ‚ûï Nouvelle candidature
        </a>
    </div>

    {% if applications|length > 0 %}
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Poste</th>
                    <th>Entreprise</th>
                    <th>Plateforme</th>
                    <th>Localisation</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for application in applications %}
                <tr>
                    <td>{{ application.applicationDate|date('d/m/Y') }}</td>
                    <td>
                        <strong>{{ application.jobTitle }}</strong>
                        {% if application.salary %}
                            <br><small class="text-secondary">{{ application.salary }}</small>
                        {% endif %}
                    </td>
                    <td>{{ application.company.name }}</td>
                    <td>{{ application.platform.name }}</td>
                    <td>{{ application.location ?? '-' }}</td>
                    <td>
                        <span class="badge badge-{{ application.status.badge }}">
                            {{ application.status.label }}
                        </span>
                    </td>
                    <td>
                        <div class="flex gap-sm">
                            <a href="{{ path('app_application_show', {'id': application.id}) }}" class="btn btn-sm btn-secondary">
                                üëÅÔ∏è
                            </a>
                            <a href="{{ path('app_application_edit', {'id': application.id}) }}" class="btn btn-sm btn-primary">
                                ‚úèÔ∏è
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="card text-center">
        <h3>Aucune candidature pour le moment</h3>
        <p class="text-secondary mb-lg">Commencez par ajouter votre premi√®re candidature !</p>
        <a href="{{ path('app_application_new') }}" class="btn btn-primary">
            ‚ûï Ajouter une candidature
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
